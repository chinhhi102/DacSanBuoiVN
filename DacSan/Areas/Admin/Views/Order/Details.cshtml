@model IEnumerable<DataLibrary.Models.OrderDetailModel>

@{
    ViewBag.Title = "Details";
}
<div class="row">
    <div class="col-md-8">
        <h1>Chi tiết đơn hàng</h1>
        <table class="table table-striped table-dark">
            <tr>
                <th scope="col">
                    ID
                </th>
                <th scope="col">
                    Mã sản phẩm
                </th>
                <th scope="col">
                    Số lượng
                </th>
                <th scope="col">
                    Đơn giá
                </th>
                <th scope="col">
                    Ngày đặt
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.ChiTietDonDatHangID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SanPhamID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SL)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonGia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayDat)
                    </td>
                </tr>
            }

        </table>
        <a href="/Admin/Order/Complete?id=@ViewData["OrderID"]" class="btn btn-success" style="float: right">
            Hoàn thành
        </a>
    </div>
    <div id="RightNav">
        @Html.Partial("~/Areas/Admin/Views/Shared/_RightNav.cshtml")
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<style>
    body {
        padding-top: 70px;
    }
</style>