@using DataLibrary.Models

<div class="row">
    <div class="col-md-8">


        <h1>Quản Lý Sản Phẩm</h1>
        <a href="/Admin/Product/Create"><button class="btn btn-info">Thêm Sản Phẩm</button></a>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Mã SP</th>
                    <th>Tên SP</th>
                    <th>Giá bán</th>
                    <th>Tình trạng</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ProductModel product in (IEnumerable<ProductModel>)ViewData["products"])
                {
                    <tr>
                        <td>@product.SanPhamID</td>
                        <td>@product.TenSP</td>
                        <td>800,000đ</td>
                        <td>Đã bán <span class="label label-success">5 / 10</span></td>
                        <td>
                            <a href="#"><span class="label label-warning">Sửa</span></a>&nbsp;
                            <a href="#"><span class="label label-danger" onclick="return confirm('Bạn có muốn xoá tài khoản này ?')">Xoá</span></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center">
            <ul class="pagination">
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li class="disabled"><a href="#">4</a></li>
                <li><a href="#">5</a></li>
            </ul>
        </div>



    </div>
    <div class="col-md-4">
        <a href="#" class="list-group-item active">Menu</a>
        <a href="#" class="list-group-item">Quản Lý Đơn Hàng</a>
        <a href="/Admin/Product" class="list-group-item">Quản Lý Sản Phẩm</a>
        <a href="#" class="list-group-item">Quản Lý ...</a>
        <a href="#" class="list-group-item">Cài Đặt Hệ Thống</a>
    </div>
</div>


<style>
    body {
        padding-top: 70px;
    }
</style>




