@using DataLibrary.Models
@model DataLibrary.Models.ProductModel


<div class="row">
    <div class="col-md-8">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Thêm sản phẩm</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label class="control-label col-md-2" for="Tên sản phẩm">Tên sản phẩm</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" for="Mô tả sản phẩm">Mô tả sản phẩm</label>
                    <div class="col-md-10">
                        <textarea class="form-control rounded-0" name="MoTa" rows="10"></textarea>
                        @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" for="Loại sản phẩm">Loại sản phẩm</label>
                    <div class="col-md-10">
                        <select name="LoaiSPID" class="form-control">
                            @foreach (LoaiSPModel loai in (IEnumerable<LoaiSPModel>)ViewData["loaisp"])
                            {
                                <option value="@loai.LoaiSPID">@loai.TenLoaiSP</option>
                            }
                        </select>
                        @Html.ValidationMessageFor(model => model.LoaiSPID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" for="Xuất sứ">Xuất sứ</label>
                    <div class="col-md-10">
                        <select name="DiaChiID" class="form-control">
                            @foreach (DiaChiModel loai in (IEnumerable<DiaChiModel>)ViewData["diachi"])
                            {
                                <option value="@loai.DiaChiID">@loai.TenTinh</option>
                            }
                        </select>
                        @Html.ValidationMessageFor(model => model.DiaChiID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Tạo Sản Phẩm" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

    </div>
    <div class="col-md-4">
        <a href="#" class="list-group-item active">Menu</a>
        <a href="#" class="list-group-item">Quản Lý Đơn Hàng</a>
        <a href="/Admin/Product" class="list-group-item">Quản Lý Sản Phẩm</a>
        <a href="#" class="list-group-item">Quản Lý ...</a>
        <a href="#" class="list-group-item">Cài Đặt Hệ Thống</a>
    </div>
</div>


<style>
    body {
        padding-top: 70px;
    }
</style>